<?xml version="1.0" encoding="utf-8" ?>
<configuration>
  <configSections>
    <!-- log4net -->
    <section name="log4net" type="log4net.Config.Log4NetConfigurationSectionHandler,log4net"/>
  </configSections>
  <appSettings>
    <!--移动手机号-->
    <add key="Telephone" value="xxxxxx" />
    <!--飞信登陆密码-->
    <add key="Password" value="xxxxx"/>
    <!--收发Gmail帐户的邮件-->
    <add key="GmailUserName" value="xxxx"/>
    <add key="GmailPassword" value="xxxx"/>
    <!--是否转发消息给自己手机-->
    <add key="AllowForward" value="true"/>
    <!--隐藏热键Ctrl+Alt+HotKey-->
    <add key="HotKey" value="X"/>
  </appSettings>
  <log4net>
    <logger name="FxLog">
      <level value="INFO"/>
      <appender-ref ref="RollingFile"/>
    </logger>
    <appender name="RollingFile" type="log4net.Appender.RollingFileAppender">
      <file value="Logs/Log.log"/>
      <appendToFile value="true"/>
      <rollingMode value="Date"/>
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%d %-4r [%t] %-5p %c %x - %m%n"/>
      </layout>
    </appender>
    <!--定义输出到控制台命令行中-->
    <appender name="ConsoleAppender" type="log4net.Appender.ConsoleAppender">
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%d %-4r [%t] %-5p %c %x - %m%n"/>
      </layout>
    </appender>
  </log4net>
</configuration>